---
import { getRandomString } from "../utils/randomGenerator";

const { label } = Astro.props;

const id = getRandomString();
---

<div class="text-gray-900">
  <label for={id} class="block text-sm font-medium">
    {label}
  </label>
  <input
    type="text"
    id={id}
    id={id}
    id="price"
    class="block duration-200 w-full rounded border-0 p-1.5 mt-1 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-accent focus:outline-none"
  />
</div>

