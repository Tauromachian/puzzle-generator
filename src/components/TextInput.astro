---
import { getRandomString } from "../utils/randomGenerator";

const { label } = Astro.props;

const name = getRandomString();
---

<div class="text-gray-900">
  <label for={name} class="block text-sm font-medium leading-6">
    {label}
  </label>
  <input
    type="text"
    name={name}
    id="price"
    class="block w-full rounded border-0 p-1.5 mt-1 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset"
  />
</div>

