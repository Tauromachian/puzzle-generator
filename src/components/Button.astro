---
const { class: classes, link = null } = Astro.props;
---

{
  link ? (
    <a href={link} class="bg-accent rounded" class:list={classes}>
      <div class="py-2 px-3">
        <slot />
      </div>
    </a>
  ) : (
    <button class="bg-accent rounded" class:list={classes}>
      <div class="py-2 px-3">
        <slot />
      </div>
    </button>
  )
}

