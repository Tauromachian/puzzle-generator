---
import Layout from "@/layouts/Layout.astro";

import Card from "@/components/Card.astro";
import Button from "@/components/Button.astro";
import TextInput from "@/components/TextInput.astro";
import Checkbox from "@/components/Checkbox.astro";
import CheckboxGroup from "@/components/CheckboxGroup.astro";
import CardBody from "@/components/CardBody.astro";
import Table from "@/components/Table.astro";

const formats = ["png", "jpg", "csv", "txt", "pdf"];
const headers = ["Name", "Number of words used", "Words used", "Actions"];
const puzzles = [];
---

<Layout title="Welcome to Astro.">
  <main class="container mx-auto">
    <header class="my-20">
      <h1 class="text-6xl">Puzzle Generator</h1>
      <h2 class="text-xl">Make your own puzzles</h2>
    </header>
    <h3 class="text-3xl mb-4">Lists</h3>
    <div class="flex gap-2 mb-4">
      <Button>Upload Puzzles</Button>
      <Button>Bulk Delete</Button>
    </div>
    <div class="flex gap-4">
      <Card class="max-w-80">
        <CardBody class="flex flex-col gap-5">
          <h3 class="text-xl">Options</h3>
          <div class="flex flex-col gap-5">
            <TextInput label="Font Name" />
            <TextInput label="Header font size" />
            <Checkbox label="Hide borders" />
            <CheckboxGroup label="Format">
              {formats.map((format) => <Checkbox label={format} />)}
            </CheckboxGroup>
          </div>
          <div class="flex flex-col flex-wrap gap-2">
            <Button>Download all puzzles</Button>
            <Button>Download all solutions</Button>
          </div>
        </CardBody>
      </Card>
      <Card class="w-full">
        <CardBody>
          <Table>
            <thead>
              <tr>
                {headers.map((header) => <th class="text-left">{header}</th>)}
              </tr>
            </thead>
            {
              puzzles.map((puzzle) => (
                <tbody>
                  <td class="text-left border-b border-gray-400">
                    {puzzle.name}
                  </td>
                  <td class="text-left border-b border-gray-400">
                    {puzzle.numberOfWords}
                  </td>
                  <td class="text-left border-b border-gray-400">
                    {puzzle.wordsUsed}
                  </td>
                </tbody>
              ))
            }
          </Table>
        </CardBody>
      </Card>
    </div>
  </main>
</Layout>

